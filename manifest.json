{
  "manifest_version": 3,
  "name": "Simple Auto Reloader",
  "version": "1.2",
  "description": "Auto-reload the current tab at a user-defined interval (seconds).",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_title": "Auto Reloader",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
